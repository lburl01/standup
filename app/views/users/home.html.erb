<div class="usersHomeContainer" ng-controller="UsersHomeController as user">

    <nav class="userHomeNav">
      <ul>
        <li> <%= image_tag("lightbulb.png", :alt => "Idea by Davo Sime from the Noun Project", :class => "navIcon") %></li>
        <li>Home</li>
        <li>Bulbs</li>
      </ul>
    </nav>

    <form class="bulbForm" name="bulbForm">

        <label for="brightBulb">Bright Bulb:</label>
        <textarea class="brightBulb" name="brightBulb" rows="4" cols="40" placeholder="Share a bright bulb"></textarea>

        <label for="dimBulb">Dim Bulb:</label>
        <textarea class="dimBulb" name="dimBulb" rows="4" cols="40" placeholder="Share a dim bulb"></textarea>

        <label for="blocker">Blocker:</label>
        <textarea class="blocker" name="blocker" rows="4" cols="40" placeholder="What's been blocking you lately?"></textarea>

        <label for="panicScore">Panic Score:</label>
        <select class="panicScore" name="panicScore">
            <option ng-repeat="score in user.score" value="{{score}}">{{score}}</option>
        </select>
        <button type="button" name="submitBulb">Post</button>

    </form>
</div>
